<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.eldorado.ui.treinamento.fragment.TreinamentoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/file_selector_recycle_view_train"
            android:layout_width="match_parent"
            android:layout_height="228dp">


        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Embebeding" />

        <Spinner
            android:id="@+id/spinnerEmbebeding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de treinamento" />

        <Spinner
            android:id="@+id/spinnertypeTrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttontrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treinar" />

        <Button
            android:id="@+id/buttonTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="testar"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/texviewResult"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text=" "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>